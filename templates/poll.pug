extends layout

block content
	.row
		.col-xs-12
			h2.text-center= poll.name
				br
				small= "A poll by " + poll.user.name
	.row
		if (poll.vote.id)
			.col-xs-12
				canvas.poll-chart(data-id=poll.id)
				h3.text-center You voted for 
					span.text-muted= poll.vote.term
		else
			.col-xs-4
				include voteform
			.col-xs-8
				canvas.poll-chart(data-id=poll.id)

		
		.col-xs-12.text-center
			small
				| Share poll: 
				a.self-link fcc.thing/self/1
