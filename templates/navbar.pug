block content
	.navbar.navbar-default
		.container-fluid
			.navbar-header
				a.navbar-brand(href="/") FCC Voting App
				button.navbar-toggle(type="button" data-toggle="collapse" data-target="#navbar")
					span.icon-bar
					span.icon-bar
					span.icon-bar
			#navbar.collapse.navbar-collapse
				ul.nav.navbar-nav.navbar-right.nav-pills
					if user
						li.nav-item
							a(href="/") Home
						li.nav-item
							a(href="/polls") Available Polls
						li.nav-item
							p.navbar-btn
								a.btn.btn-block.btn-primary(href="/polls/new") Start a New Poll
					else
						li.nav-item
							p.navbar-btn
								include login_button
